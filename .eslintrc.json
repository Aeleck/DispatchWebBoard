{
  "env": {
    "browser": true,
    "es6": true,
    "jquery": true,
    "node": true
  },
  "extends": [
    "eslint:recommended", 
    "plugin:react/recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2015,
    "sourceType": "module"
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "no-restricted-syntax": [
      "error",
      "ForStatement"
     ],
    "indent": [
      "warn",
      2
    ],
    "linebreak-style": [
      "warn",
      "unix"
    ],
    "quotes": [
      "warn",
      "single",
      "avoid-escape"
    ],
    "semi": [
      "error",
      "always"
    ],
    "strict": [
      "error",
      "global"
    ],
    "curly": [
      "error"
    ],
    "no-cond-assign": [
      "error",
      "always"
    ],
    "no-dupe-keys": [
      "error"
    ],
    "no-duplicate-case": [
      "error"
    ],
    "no-sparse-arrays": [
      "error"
    ],
    "no-obj-calls": [
      "error"
    ],
    "no-unexpected-multiline": [
      "error"
    ],
    "valid-typeof": [
      "error"
    ],
    "no-irregular-whitespace": [
      "error"
    ],
    "vars-on-top": [
      "warn"
    ],
    "space-before-function-paren": [
      "warn",
      "never"
    ],
    "space-before-blocks": [
      "warn"
    ],
    "space-in-parens": [
      "warn",
      "never"
    ],
    "space-infix-ops": [
      "warn"
    ],
    "spaced-comment": [
      "warn",
      "always"
    ],
    "space-unary-ops": [
      "warn"
    ],
    "keyword-spacing": [
      "warn"
    ],
    "guard-for-in": [
      "error"
    ],
    "default-case": [
      "error"
    ],
    "eqeqeq": [
      "error"
    ],
    "no-eq-null": [
      "error"
    ],
    "no-eval": [
      "error"
    ],
    "no-empty-function": [
      "warn"
    ],
    "no-extra-bind": [
      "error"
    ],
    "no-implied-eval": [
      "error"
    ],
    "complexity": [
      "warn",
      {
        "max": 15
      }
    ],
    "no-implicit-coercion": [
      "error"
    ],
    "no-implicit-globals": [
      "error"
    ],
    "no-invalid-this": [
      "error"
    ],
    "no-lone-blocks": [
      "error"
    ],
    "no-loop-func": [
      "error"
    ],
    "no-magic-numbers": [
      "warn",
      {
        "ignore": [0, 1],
        "enforceConst": true
      }
    ],
    "no-return-assign": [
      "error"
    ],
    "no-self-compare": [
      "error"
    ],
    "no-unused-expressions": [
      "error"
    ],
    "no-useless-concat": [
      "error"
    ],
    "no-useless-return": [
      "warn"
    ],
    "no-with": [
      "error"
    ],
    "yoda": [
      "warn"
    ],
    "no-plusplus": [
      "error"
    ],
    "prefer-spread": [
      "warn"
    ],
    "prefer-template": [
      "warn"
    ]
  }
}