{
  "env": {
    "browser": true,
    "es6": true,
    "jquery": true,
    "node": true
  },
  "extends": [
    "eslint:recommended", 
    "plugin:react/recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2015,
    "sourceType": "module"
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "indent": [
      "warn",
      2
    ],
    "linebreak-style": [
      "warn",
      "unix"
    ],
    "quotes": [
      "warn",
      "single",
      "avoid-escape"
    ],
    "semi": [
      "error",
      "always"
    ],
    "strict": [
      "error",
      "global"
    ],
    "curly": [
      "error"
    ],
    "no-cond-assign": [
      "error",
      "always"
    ],
    "no-dupe-keys": [
      "error"
    ],
    "no-duplicate-case": [
      "error"
    ],
    "no-sparse-arrays": [
      "error"
    ],
    "no-obj-calls": [
      "error"
    ],
    "no-unexpected-multiline": [
      "error"
    ],
    "valid-typeof": [
      "error"
    ],
    "no-irregular-whitespace": [
      "error"
    ],
    "vars-on-top": [
      "warn"
    ],
    "space-before-function-paren": [
      "warn",
      "never"
    ],
    "space-before-blocks": [
      "warn"
    ],
    "space-in-parens": [
      "warn",
      "never"
    ],
    "space-infix-ops": [
      "warn"
    ],
    "spaced-comment": [
      "warn",
      "always"
    ],
    "guard-for-in": [
      "error"
    ]
  }
}